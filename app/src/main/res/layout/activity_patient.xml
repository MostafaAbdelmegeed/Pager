<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context=".PatientActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/patient_image_patient_activity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/asset_unknown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: " />

                    <TextView
                        android:id="@+id/patient_name_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender: " />

                    <TextView
                        android:id="@+id/patient_gender_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: " />

                    <TextView
                        android:id="@+id/patient_age_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />

                    <TextView
                        style="@style/Units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yrs" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight: " />

                    <TextView
                        android:id="@+id/patient_weight_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />

                    <TextView
                        style="@style/Units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulse: " />

                    <TextView
                        android:id="@+id/patient_pulse_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />

                    <TextView
                        style="@style/Units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bpm" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature: " />

                    <TextView
                        android:id="@+id/patient_temp_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />

                    <TextView
                        style="@style/Units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â°C" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BP: " />

                    <TextView
                        android:id="@+id/patient_bp_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />

                    <TextView
                        style="@style/Units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mmHg" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telephone: " />

                    <TextView
                        android:id="@+id/patient_telephone_number"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNKNOWN"
                        android:textColor="@color/colorPrimaryText"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: " />

                    <TextView
                        android:id="@+id/patient_address"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNKNOWN"
                        android:textColor="@color/colorPrimaryText"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Parameters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Condition: " />

                    <TextView
                        android:id="@+id/patient_severity_patient_activity"
                        style="@style/Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PlaceHolder" />

                </LinearLayout>

                <Button
                    android:id="@+id/medication"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Medication" />
                <Button
                    android:id="@+id/refresh"
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="Refresh" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>